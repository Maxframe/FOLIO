<footer>
  <p class="copyright">
    Hand-crafted by me, powered by <a
      target="_blank"
      rel="noopener noreferrer"
      href="https://astro.build/">Astro</a
    >
     &copy; <span id="copyright-date"></span>
  </p>
  <div class="bg-grad"></div>
</footer>

<style lang="scss">
  footer {
    position: relative;
    margin-top: 8rem;
    .bg-grad {
      position: absolute;
      bottom: 0;
      background-image: radial-gradient(
        100% 100% at 50% 100%,
        var(--clr-wb-darkish) 0%,

        var(--clr-transparent) 100%
      );
      width: 100%;
      height: 40rem;
      z-index: -999;
    }
    .copyright {
      user-select: none;
      text-align: center;
      font-weight: 500;
      color: var(--text);
      opacity: 0.7;
      padding: 0.5rem;

      a {
        transition: color 300ms ease;
        opacity: 1;

        &:hover {
          color: var(--clr-accent);
        }
      }
    }
  }
</style>

<script>
  document.querySelector("#copyright-date").textContent =
    "2k" + new Date().getFullYear().toString().substring(2, 4);
</script>

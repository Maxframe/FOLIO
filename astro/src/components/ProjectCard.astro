---
import ImageBuilder from './ImageBuilder.astro';

export interface Props {
  projectName: string;
  projectLink: string;
  projectThumbnail: any;
}
const { projectName, projectLink, projectThumbnail } = Astro.props as Props;
---

<div class="card">
  <a href={projectLink} class="card-link">
    <div class="card-overlay">
      <p class="card-title">{projectName}</p>
      <div class="card-border"></div>
    </div>
    <ImageBuilder cls="thumbnail-image" source={projectThumbnail} alt="" w={600} h={600} />
  </a>
</div>

<style is:global>
  .card {
    position: relative;
    border-radius: 6%;
    overflow: hidden;
    box-shadow: 0px 6px 10px -8px black;
    width: 100%;
    aspect-ratio: 1/1;
    background-color: var(--neutral-color);
    /* clip-path: polygon(
      var(--card-cut-corner) 0,
      calc(100% - var(--card-cut-corner)) 0,
      100% var(--card-cut-corner),
      100% calc(100% - var(--card-cut-corner)),
      calc(100% - var(--card-cut-corner)) 100%,
      var(--card-cut-corner) 100%,
      0 calc(100% - var(--card-cut-corner)),
      0 var(--card-cut-corner)
    ); */
  }

  .card:hover a .card-overlay > .card-title {
    opacity: 1;
  }

  .card:hover a .card-overlay > .card-border {
    opacity: 0.6;
  }

  .card:hover a > .card-overlay {
    transform: scale(1);
  }

  .thumbnail-image-style {
    object-fit: cover;
    height: 100%;
    width: 100%;
    transform: scale(1.01);
    transition: var(--card-transition);
  }

  .card-overlay {
    transform: scale(0.9);
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 1;
    transition: var(--card-transition);
  }

  .card-title {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%);
    padding: 0 1rem;
    margin: 0;
    color: #fafafa;
    text-decoration: none;
    font-size: 1rem;
    text-align: center;
    z-index: 1;
    opacity: 0;
    font-weight: 700;
    transition: opacity var(--card-transition);
  }

  .card-border {
    position: absolute;
    opacity: 0;
    height: 85%;
    width: 85%;
    margin: 7.5%;
    border-radius: 6%;
    top: 0;
    left: 0;
    border: solid 0.6rem #fafafa;
    box-sizing: border-box;
    transition: opacity var(--card-transition);
  }

  @media only screen and (hover: none) {
    .thumbnail-image {
      filter: brightness(30%);
    }

    .card-title {
      opacity: 1;
    }

    .card-border {
      opacity: 0.6;
    }
  }
</style>

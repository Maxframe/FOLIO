import { useSanityClient } from "@sanity/astro";
import ImageBuilder from './ImageBuilder.astro';


const fProjectsData = await useSanityClient().fetch(`*[_type == 'projectsSection'][0]{
    heading,
    projectsFeatured[]->{
        projectName,
        "slug": slug.current,
        "thumbnailImage": thumbnailImage.asset._ref,
        thumbAltText
    }  
}`)

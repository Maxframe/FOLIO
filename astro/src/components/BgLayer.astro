<div class="bg-blur-layer">
  <div class="bg-element-wrapper">
    <div class="bg-grad"></div>
  </div>
</div>

<style lang="scss">
  .bg-blur-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -999;

    .bg-element-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
      overflow: hidden;
      &::before {
        content: "";
        position: absolute;
        inset: 0;
        background: var(--grain);
        background-size: 100px;
        -webkit-mask-image: radial-gradient(
          circle at bottom center,
          rgba(0, 0, 0, 0.2),
          transparent 50%
        );
        mask-image: radial-gradient(
          circle at bottom center,
          rgba(0, 0, 0, 0.2),
          transparent 50%
        );
      }
      .bg-grad {
        position: absolute;
        bottom: 0;
        opacity: 1;
        transition: var(--modeswitch-transition-time);

        z-index: -999;
        width: 200%;
        height: 40rem;
        transform: translate(-50%, 50%);
        left: 50%;
        background: rgb(var(--clr-wb-light), 0.05);
        filter: blur(100px);
        transform: translate(-50%, 50%);
        border-radius: 100%;
      }
    }
  }

  body.lightmode .bg-blur-layer .bg-element-wrapper .bg-grad {
    opacity: 0;
  }
</style>

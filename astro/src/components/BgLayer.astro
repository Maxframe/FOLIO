<div class="bg-blur-layer">
  <div class="bg-element-wrapper">
    <div class="bg-grad"></div>
  </div>
</div>

<style lang="scss">
  .bg-blur-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(200px);
    z-index: -999;

    .bg-element-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
      backdrop-filter: blur(200px);

      .bg-grad {
        position: absolute;
        bottom: 0;
        opacity: 1;
        transition: var(--switchmode-transition-time);
        background-image: radial-gradient(
          100% 100% at 50% 100%,
          rgb(var(--clr-wb-darkish)) 0%,

          rgb(var(--clr-transparent)) 100%
        );
        width: 100%;
        height: 40rem;
        z-index: -999;
        /*         background-color: rgb(var(--clr-wb-darkish));
 */
      }
    }
  }
  body.lightmode .bg-blur-layer .bg-element-wrapper .bg-grad {
    opacity: 0;
  }
</style>

<style>

  .project-section {
    margin-bottom: 8rem;
  }

  #project-section-title {
    color: var(--accent-color);
    font-size: 3rem;
    padding-top: var(--nav-height);
    margin-top: calc(var(--nav-height) * -1);
    margin-bottom: 2rem;
  }

  .projects-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 2rem;
    width: 100%;
  }

  .about-section {
    position: relative;
    display: grid;
    grid-template-columns: 2fr 3fr;
    grid-auto-flow: column;
    margin-left: 3rem;
    margin-bottom: 15rem;
    padding: 2rem;
    padding-left: 0;
    background: var(--about-color);
    border-radius: 2rem;
    border: solid 0.2rem var(--lightmode-stroke);
  }

  .about-image-wrapper {
    transform: translate(-3rem, -5rem);
  }

  .about-title {
    font-size: clamp(1.5rem, 4vw, 4rem);
  }

  .about-social {
    margin-top: 1rem;
  }

  .about-social a {
    display: block;
    font-weight: 600;
    transition: color 0.2s ease-out;
    color: var(--hero-text);
  }

  .about-social a:hover {
    color: var(--accent-color);
  }

  .about-mail-link {
    font-size: clamp(1.5rem, 4vw, 2rem);
  }

  .about-social-link {
    font-size: clamp(1rem, 2vw, 1.4rem);
  }



  @media screen and (max-width: 52rem) {
    .projects-wrapper {
      grid-template-columns: 1fr 1fr;
    }

    .about-section {
      grid-auto-flow: row;
      grid-template-columns: none;
      margin-left: 0;
      padding: 2rem;
    }

    .about-text {
      margin-top: -4rem;
    }

    .about-image-wrapper {
      transform: translate(0, -5rem);
      max-width: 15rem;
    }
  }
  @media screen and (max-width: 32rem) {
    .container {
      padding: 0 1.2rem;
    }
    .projects-wrapper {
      grid-template-columns: 1fr;
    }


  }

  @media only screen and (hover: none), (max-width: 32rem) {
    .copyright {
      margin-bottom: 5.5rem;
    }
  }
</style>

<script>
  document.querySelector("#copyright-date").textContent = "2k" + new Date()
  .getFullYear()
    .toString()
    .substring(2, 4);
</script>
